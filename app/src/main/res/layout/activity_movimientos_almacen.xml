<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MovimientosAlmacen"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">


    <TextView
        android:id="@+id/textView103"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movimientos Almacen"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="25sp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textStyle="bold"/>


        <ImageButton
            android:id="@+id/Button103"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView103"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="false"
            android:src="@drawable/escanearcodigo"
            android:background="@drawable/selector" />

    <TextView
        android:id="@+id/textView104"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Generar movimiento Automatico"
        android:layout_below="@+id/Button103"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textAlignment="center"
        />



    <ImageButton
        android:id="@+id/Button102"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textView104"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/escanearmanual"
        android:background="@drawable/selector"
        android:adjustViewBounds="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Captura Manualmente un movimiento"
        android:layout_below="@+id/Button102"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18sp"
        android:textColor="#000000"
        />













</RelativeLayout>