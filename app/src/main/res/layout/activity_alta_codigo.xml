<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.greenmouse.kaliope.AltaCodigoActivity">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Alta de Códigos"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ec268f"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/lblCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitulo"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="40dp"
        android:text="Código"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/txtCodigoCredito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblCodigo"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="number"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/lblGrado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCodigoCredito"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp"
        android:text="Grado"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/txtGrado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblGrado"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="number"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/lblCredito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtGrado"
        android:layout_marginTop="15dp"
        android:text="Límite de Crédito"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/txtCredito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblCredito"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="number"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/lblDias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCredito"
        android:layout_marginTop="15dp"
        android:text="Días de Plazo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/txtDias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblDias"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="number"
        android:textAllCaps="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Guardar"
        android:id="@+id/btGuardarCodigo"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/mi_boton"
        android:textColor="#FFFFFF"
        android:drawableLeft="@drawable/icono_guardar"/>

</RelativeLayout>
