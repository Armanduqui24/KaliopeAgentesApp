<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.greenmouse.kaliope.RealizarClienteNuevo"
    android:orientation="vertical"
    android:padding="3dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Ingresar Cliente Nuevo"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ec268f"
            android:textSize="28dp"
            android:textStyle="bold" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuenta:"
                android:textAlignment="viewEnd"

                />

            <TextView
                android:id="@+id/RealizarClienteNuevoNumeroCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuenta:"
                android:textAlignment="viewEnd"
                android:textSize="20sp"

                />


        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorNegro"

                />

            <EditText
                android:id="@+id/RealizarClienteNuevoCapturaNombre"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:inputType="textCapCharacters" />


        </LinearLayout>

        <TextView
            android:id="@+id/RealizarClienteNuevoMensajeNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Captura al menos 15 caracteres en su nombre"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="16sp"

            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Telefono1:"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorNegro"

                />

            <EditText
                android:id="@+id/RealizarClienteNuevoCapturaTelefono1"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:inputType="phone" />


        </LinearLayout>


        <TextView
            android:id="@+id/RealizarClienteNuevoMensajeTelefono1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Captura al menos 7 digitos, si el cliente no tiene telefono captura 0"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="16sp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Telefono2:"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorNegro"

                />

            <EditText
                android:id="@+id/RealizarClienteNuevoCapturaTelefono2"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:inputType="phone" />


        </LinearLayout>

        <TextView
            android:id="@+id/RealizarClienteNuevoMensajeTelefono2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Captura al menos 7 digitos, si el cliente no tiene telefono captura 0"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="16sp"

            />


        <Button
            android:id="@+id/RealizarClienteNuevoBotonSiguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continuar"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>



</ScrollView>
