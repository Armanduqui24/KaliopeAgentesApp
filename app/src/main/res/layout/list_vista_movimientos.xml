<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="1dp"
    android:id="@+id/ListEntregaMercanciaLayout"
    >


    <TextView
        android:id="@+id/ListVistaMovimientoCuenta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="cuenta"
        android:layout_weight="1"
        android:textSize="12sp"
        android:textColor="#000000"
        android:textAlignment="center"

        />

    <TextView
        android:id="@+id/ListVistaMovimientoNombreCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="nombre"
        android:layout_weight="5"
        android:textSize="15sp"
        android:textColor="#000000"
        android:textAlignment="viewStart"

        />


    <TextView
        android:id="@+id/ListVistaMovimientoRuta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ruta"
        android:layout_weight="1"
        android:textSize="13sp"
        android:textAlignment="center"

        />


    <LinearLayout
        android:layout_width="0sp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ListVistaMovimientoPagoVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pagventa"
            android:textSize="10sp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/ListVistaMovimientoPagoRegalo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pagoReg"
            android:textSize="10sp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/ListVistaMovimientoPagoContado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ventContado"
            android:textSize="10sp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/ListVistaMovimientoPagoCredito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ventContado"
            android:textSize="10sp"
            android:textAlignment="center"
            />


    </LinearLayout>








</LinearLayout>