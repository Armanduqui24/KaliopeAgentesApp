                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="$1500"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            />


                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20sp"
                        >



                        <TextView
                            android:id="@+id/telefono"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Telefono:"
                            android:layout_marginTop="10dp"
                            android:textSize="18dp"
                            />


                        <TextView
                            android:id="@+id/telefonoTVdc"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:text="712 115 76 86 712 115 76 86"
                            android:layout_marginTop="0dp"
                            android:textSize="15sp"
                            android:textColor="#000000"
                            />

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Zona:"/>

                        <TextView
                            android:id="@+id/nombrezonaTVdetallesClientes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Polotitlan"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="12sp"
                            android:textColor="#000000"
                            />

                    </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coordenadas:"
                        android:textSize="18sp"
                        />




                    <TextView
                        android:id="@+id/coordenadasTVdc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="19.1000,-100.9987"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        />


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detallesClientesVerMapaImageButton"
                        android:text="Ver en mapa"
                        android:src="@drawable/icono_mapa18"
                        />


                </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20sp"
                        android:paddingBottom="5sp"
                        android:layout_marginBottom="5dp"
                        >

                        <TextView
                            android:id="@+id/mensajeAmostrarVisitaTVdc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="urge visitar a esta clienta"
                            android:textColor="#000000"
                            />


                    </LinearLayout>





        </LinearLayout>
        <!--Aqui termina la parte del "Tarjeton del cliente" -->












        <!--Inicia la parte del historial" -->






