                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="300"
                            android:textSize="25dp"
                            android:textColor="#000000"/>




                    </LinearLayout>












                    <TextView
                        android:layout_marginTop="40sp"
                        android:layout_width="wrap_content"
