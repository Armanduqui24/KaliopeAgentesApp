                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >





                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:text="MERCANCIA ACARGO:"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        />


                    <TextView
                        android:id="@+id/mercanciaTVdc"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="139 - 4 149 - 1 159 - 5 169 - 3 399 - 4 499 - 1 "
                        android:textSize="18dp"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="---------------------------"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:gravity="top"
                        android:textColor="#000000"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:text="Total acargo:"
                            android:textSize="15sp"/>


                        <TextView
                            android:id="@+id/aCargoTVdc"
                            android:layout_width="wrap_content"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:text="$1550"
                            android:textSize="25sp"
                            android:textColor="#000000"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vence el:"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/vencimientoTVdc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="19-06-2018"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            />


                    </LinearLayout>






                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="40sp"
                        >

