<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/boton_redondo"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/textView100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="AVISO"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorAccent"
        android:textSize="28sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView101"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView100"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="Tu cliente ha tenido una excelente venta felicitalo!!"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView102"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/textView101"
        android:layout_centerHorizontal="true"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
         />


    <TextView
        android:id="@+id/textView102"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView102"
        android:layout_marginTop="15dp"
        android:text="Recuerda que seguir estos consejos haran que tu cliente sea mÃ¡s feliz y aumente sus ventas"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/Button100"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView102"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/boton_redondo"
        android:backgroundTint="@color/colorAccent"
        android:text="Vale, ya lo hice"
        android:textColor="@color/colorBlanco"
        android:textSize="15sp"
        android:textAlignment="center"

        />




</RelativeLayout>