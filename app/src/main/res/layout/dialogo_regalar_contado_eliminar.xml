<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/amu_bubble_shadow"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Que quieres hacer con este producto?"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/DialogoRegalarContadoEliminarBotonCredito"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Credito"
            android:background="@drawable/border_blue"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            />

        <Button
            android:id="@+id/DialogoRegalarContadoEliminarBotonRegalo"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Regalo"
            android:background="@drawable/border_pink"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            />


        <Button
            android:id="@+id/DialogoRegalarContadoEliminarBotonContado"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Contado"
            android:background="@drawable/border_green"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />

        <Button
            android:id="@+id/DialogoRegalarContadoEliminarBotonEliminar"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:background="@drawable/border_gris"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />




    </LinearLayout>

</LinearLayout>