                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Adelantos: -"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:textColor="@color/colorNegro"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/FragmentDiaNominaAdelantos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="30"
                android:textSize="22sp"
                android:textColor="@color/colorNegro"
                android:layout_marginStart="10sp"
                />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Gasto Extra: -"
                android:textAlignment="textEnd"
                android:layout_weight="0.8"
                android:textColor="@color/colorNegro"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/FragmentDiaNominaGastoExtra1Importe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:text="300"
                android:textSize="22sp"
                android:textColor="@color/colorNegro"
                android:layout_marginStart="10sp"
                />

            <TextView
                android:id="@+id/FragmentDiaNominaGastoExtra1Concepto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="conceptoDeGasto"
                android:textSize="12sp"
                android:textColor="@color/colorNegro"
                android:layout_marginStart="10sp"
                />

        </LinearLayout>








        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Gasto Extra: -"
                android:textAlignment="textEnd"
                android:layout_weight="0.8"
                android:textColor="@color/colorNegro"
