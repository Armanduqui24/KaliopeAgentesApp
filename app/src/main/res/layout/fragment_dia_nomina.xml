<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nomiaDiaFragment"
    android:orientation="vertical"
    android:paddingEnd="5sp"
    android:paddingStart="5sp"
    android:paddingBottom="5sp"
    android:paddingTop="5sp"
    tools:context="luisda.fragments.DiaNominaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:background="@color/colorVisitado"
        android:orientation="vertical"
        >


        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/FragmentDiaNominaTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dia 1"
            android:textSize="20sp"
            android:textColor="@color/colorNegro"
            android:layout_gravity="center_horizontal"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ruta Visitada:"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Fecha de Visita:"
                android:textSize="18sp"
                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/FragmentDiaNominaRuta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="Villa Victoria"
                android:layout_weight="1"
                android:textColor="@color/colorNegro"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/FragmentDiaNominaFecha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="27-05-2019"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/colorNegro"
                android:layout_marginStart="10sp"
                />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

