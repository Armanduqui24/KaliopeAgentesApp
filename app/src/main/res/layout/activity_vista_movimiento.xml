<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="mx.greenmouse.kaliope.VistaMovimientoActivity">

        <TextView
            android:id="@+id/txtTituloMM"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_weight="0.76"
            android:gravity="center"
            android:text="Vista Movimiento"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ec268f"
            android:textSize="32dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblCuentaVM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:text="Cuenta:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_below="@+id/txtTituloMM"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txtCuentaVM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignTop="@+id/lblCuentaVM"
            android:layout_toEndOf="@+id/lblCuentaVM"
            android:layout_marginLeft="2dp" />

        <TextView
            android:id="@+id/lblNombreVM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lblCuentaVM"
            android:layout_marginTop="5dp"
            android:text="Nombre:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNombreVM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignTop="@+id/lblNombreVM"
            android:layout_toEndOf="@+id/lblNombreVM"
            android:layout_marginLeft="2dp" />

        <TextView
            android:id="@+id/lblCodigoVM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credito:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_below="@+id/lblNombreVM"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/txtCodigoVM"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="000"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignTop="@+id/lblCodigoVM"
            android:layout_toEndOf="@+id/lblCodigoVM"
            android:layout_marginLeft="2dp" />

        <TextView
            android:id="@+id/txtDiasVM"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="000"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="2dp"
            android:gravity="end"
            android:layout_alignTop="@+id/lblDiasVencimientoMV"
            android:layout_toEndOf="@+id/txtFechaVM" />

        <TextView
            android:id="@+id/lblDiasVencimientoMV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Días de vencimiento:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_below="@+id/lblCodigoVM"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/lblGradoVM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grado:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_below="@+id/lblDiasVencimientoMV"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/txtGradoVM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignTop="@+id/lblGradoVM"
            android:layout_toEndOf="@+id/lblGradoVM"
            android:layout_marginLeft="2dp" />

        <TextView
            android:id="@+id/lblFechaVM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_below="@+id/lblGradoVM"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/txtFechaVM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/lblFechaVM"
            android:layout_toEndOf="@+id/lblFechaVM"
            android:text="DD-MM-AAAA"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="2dp" />

        <TextView
            android:id="@+id/txtVencimientoVM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DD-MM-AAA"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignTop="@+id/lblVencimientoVM"
            android:layout_toEndOf="@+id/lblVencimientoVM"
            android:layout_marginLeft="2dp" />

        <TextView
            android:id="@+id/lblVencimientoVM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vencimeinto:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_below="@+id/lblFechaVM"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/lblEntrega"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:text="Entrega de Mercancía"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_below="@+id/txtVencimientoVM"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/lblSalida"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="(Salida)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/lblEntrega"
            android:layout_alignParentRight="true" />

        <ListView
            android:id="@+id/lvSalidasVM"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lblSalida"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/lblTotalSalidasPzVM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Pz: "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_below="@+id/lvSalidasVM"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/txtTotalSalidasPzVM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00000"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/lblTotalSalidasPzVM"
            android:layout_toEndOf="@+id/lblTotalSalidasVM" />

        <TextView
            android:id="@+id/txtTotalSalidasVM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000000000"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignTop="@+id/lblTotalSalidasPzVM"
            android:layout_toEndOf="@+id/lblTotalSalidasPzVM" />

        <TextView
            android:id="@+id/lblTotalSalidasVM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_above="@+id/lblDevoluciones"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/lblDevoluciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Devolución"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:layout_below="@+id/txtTotalSalidasPzVM"
            android:layout_alignParentStart="true"
            android:layout_marginTop="22dp" />

        <TextView
            android:id="@+id/lblEntradas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="(Entradas)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/lblDevoluciones"
            android:layout_alignParentRight="true" />


        <ListView
            android:id="@+id/lvEntradasVM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblEntradas"
            android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/lblTotalPzEntrada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Total Pz: "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"
                    android:layout_below="@+id/lvEntradasVM"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/txtTotalEntradasPzVM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00000"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_alignTop="@+id/lblTotalEntradasVM"
                    android:layout_toEndOf="@+id/lblTotalEntradasVM" />

                <TextView
                    android:id="@+id/txtTotalEntradasVM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000000000"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_above="@+id/txtTotalEntradasPzVM"
                    android:layout_alignStart="@+id/txtNombreVM" />

                <TextView
                    android:id="@+id/lblTotalEntradasVM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"
                    android:layout_below="@+id/lblTotalPzEntrada"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/lblPagos"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Pagos"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"
                    android:layout_below="@+id/txtTotalEntradasPzVM"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp" />

               <TextView
                   android:id="@+id/lblPagoVM"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Recibimos un pago de: "
                   android:textAppearance="?android:attr/textAppearanceSmall"
                   android:textStyle="bold"
                   android:layout_marginTop="90dp"
                   android:layout_below="@+id/lblPagos"
                   android:layout_alignParentStart="true" />

               <TextView
                   android:id="@+id/txtPagoVM"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="0000000000"
                   android:textAppearance="?android:attr/textAppearanceSmall"
                   android:layout_alignTop="@+id/lblPagoVM"
                   android:layout_toEndOf="@+id/lblPagoVM" />

               <TextView
                   android:id="@+id/lblSaldoVM"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentStart="true"
                   android:text="Nuevo Saldo: "
                   android:textAppearance="?android:attr/textAppearanceSmall"
                   android:textStyle="bold"
                   android:layout_below="@+id/txtPagoVM"
                   android:layout_alignParentLeft="true" />

               <TextView
                   android:id="@+id/txtSaldoVM"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="0000000000"
                   android:textAppearance="?android:attr/textAppearanceSmall"
                   android:layout_alignTop="@+id/lblSaldoVM"
                   android:layout_toEndOf="@+id/lblSaldoVM" />

               <TextView
                   android:id="@+id/lblPuntosVM"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentStart="true"
                   android:text="Puntos: "
                   android:textAppearance="?android:attr/textAppearanceSmall"
                   android:textStyle="bold"
                   android:layout_below="@+id/txtSaldoVM"
                   android:layout_alignParentLeft="true" />

               <TextView
                   android:id="@+id/txtPuntosVM"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="000000"
                   android:textAppearance="?android:attr/textAppearanceSmall"
                   android:layout_below="@+id/lblSaldoVM"
                   android:layout_toEndOf="@+id/lblNombreVM" />

        <Button
            android:id="@+id/btnImprimeVistaMovimiento"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/mi_boton"
            android:drawableLeft="@drawable/icono_impresora"
            android:text="Imprimir"
            android:textColor="#FFF"
            android:layout_below="@+id/txtPuntosVM"
            android:layout_toEndOf="@+id/txtPuntosVM"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="$ 0000000"
            android:id="@+id/txtImporteVentaVM"
            android:layout_below="@+id/lblPagos"
            android:layout_toEndOf="@+id/lblImporteVenta"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="$ 0000000"
            android:id="@+id/txtImporteDiferenciaVM"
            android:layout_above="@+id/lblImporteSaldoPendiente"
            android:layout_toEndOf="@+id/lblImporteDiferencia"
            android:layout_marginLeft="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="$ 0000000"
            android:id="@+id/txtImporteSaldoPendienteVM"
            android:layout_alignTop="@+id/lblImporteSaldoPendiente"
            android:layout_toEndOf="@+id/lblImporteSaldoPendiente"
            android:layout_marginLeft="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="$ 0000000"
            android:id="@+id/txtImporteOtroVM"
            android:layout_below="@+id/lblImporteSaldoPendiente"
            android:layout_alignEnd="@+id/txtPuntosVM"
            android:layout_marginLeft="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Venta:"
            android:id="@+id/lblImporteVenta"
            android:layout_below="@+id/lblPagos"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="difReg:"
            android:id="@+id/lblImporteDiferencia"
            android:layout_below="@+id/lblImporteVenta"
            android:layout_alignParentStart="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Saldo Pendiente:"
            android:id="@+id/lblImporteSaldoPendiente"
            android:layout_below="@+id/lblImporteDiferencia"
            android:layout_alignParentStart="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Otro:"
            android:id="@+id/lblImporteOtro"
            android:layout_below="@+id/lblImporteSaldoPendiente"
            android:layout_alignStart="@+id/lblImporteSaldoPendiente"
            android:textStyle="bold" />

    </RelativeLayout>

</ScrollView>