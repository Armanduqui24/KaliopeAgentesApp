<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.greenmouse.kaliope.RealizarPagos2ContadoRegalos"
    android:orientation="vertical"
    >






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Pagos Extras"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ec268f"
                android:textSize="28dp"
                android:textStyle="bold" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Para poder continuar tu cliente debe pagar las ventas al contado o sus diferencias de regalo"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/RealizarPagosContadoRegalosNombreCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="nombre"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorNegro"
                android:textSize="16dp"
                android:textStyle="bold" />









            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/RealizarPagosContadoRegalosLayoutDiferenciaRegalo"

                >

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="40sp"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="viewEnd"

                    />



                <TextView
                    android:id="@+id/RealizarPagosContadoRegalosPagoDiferenciaRegalos"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$900"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="35sp" />


                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Diferencia de regalo"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    />



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/RealizarPagosContadoRegalosLayoutContado"
                >

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="40sp"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="viewEnd"
                    />

                <TextView
                    android:id="@+id/RealizarPagosContadoRegalosVentaAlContado"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$1530"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="35sp" />


                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Venta de Contado"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/RealizarPagosContadoRegalosLayoutDifCredito"
                >

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="40sp"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="viewEnd"
                    />

                <TextView
                    android:id="@+id/RealizarPagosContadoRegalosDifCredito"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$1530"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="35sp" />


                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Diferencia credito"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp"
                    />



            </LinearLayout>









            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Total por Pagar:"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorNegro"

                    />

                <TextView
                    android:id="@+id/RealizarPagosContadoRegalosTotalPorPagar"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$890"
                    android:textColor="@color/colorNegro"
                    android:textSize="30sp" />





            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Pago:"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorNegro"

                    />

                <EditText
                    android:id="@+id/RealizarPagosContadoRegalosPagoCapturado"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="5"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:inputType="number" />





            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:layout_marginTop="60sp"
                >

                <TextView
                    android:id="@+id/RealizarPagosContadoRegalosMensajeParaContinuar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="No puedes continuar, es necesarui que tu cliente haga la liquidacion total del pago"
                    android:textAlignment="center"
                    />





                <Button
                    android:id="@+id/RealizarPagosContadoRegalosBotonSiguiente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Siguiente"
                    android:textColor="@color/colorNegro"
                    android:textStyle="italic"
                    android:layout_marginTop="15sp"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:layout_gravity="center_horizontal"
                    />

            </LinearLayout>






        </LinearLayout>




</ScrollView>
